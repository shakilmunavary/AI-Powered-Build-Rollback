pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                script {
                    try {
                        sh 'git clone https://github.com/shakilmunavary/AI-Powered-Jenkins-BuildFailure-Management.git'
                    } catch (Exception e) {
                        error "❌ Clone failed: ${e.message}"
                    }
                }
            }
        }
        
        stage('Build with Maven') {
            steps {
                script {
                    try {
                        sh 'set -e; mvn clean package'  // ✅ Exits immediately if the command fails
                    } catch (Exception e) {
                        error "❌ Build failed: ${e.message}"
                    }
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    try {
                        sh 'set -e; mvn test'
                    } catch (Exception e) {
                        error "❌ Tests failed: ${e.message}"
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    try {
                        sh 'set -e; ./deploy.sh'
                    } catch (Exception e) {
                        error "❌ Deployment failed: ${e.message}"
                    }
                }
            }
        }
    }
}
